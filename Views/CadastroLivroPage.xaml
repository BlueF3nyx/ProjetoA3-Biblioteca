<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BibliotecaAPP.Views.CadastroLivroPage"
             Title="Cadastro de Livros"
             BackgroundColor="Transparent"
             NavigationPage.HasNavigationBar="False">

    <Grid>
        <!-- Imagem de fundo -->
        <Image Source="login_biblioteca.jpg"
               Aspect="AspectFill"
               Opacity="1.0"
               IsOpaque="True" />

        <BoxView BackgroundColor="#0B1D49"
                 Opacity="0.75"
                 InputTransparent="True" />

        <VerticalStackLayout Padding="20" Spacing="10">

            <Label Text="Cadastro de Livro"
                   FontSize="24"
                   TextColor="White"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <!-- Lista de livros -->
            <ListView x:Name="LivrosListView"
                      HeightRequest="200"
                      BackgroundColor="Transparent"
                      ItemSelected="OnLivroSelecionado"
                      SelectionMode="None">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Border Stroke="Black" StrokeThickness="1" Background="White" Padding="5" Margin="5,2">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="3" />
                                </Border.StrokeShape>

                                <Grid ColumnDefinitions="*, Auto, Auto" VerticalOptions="Center">
                                    <Label Text="{Binding Titulo}"
                                           VerticalOptions="Center"
                                           LineBreakMode="NoWrap"
                                           TextColor="Black" />

                                    <Button Text="Editar"
                                            Grid.Column="1"
                                            BackgroundColor="#F97316"
                                            TextColor="White"
                                            FontAttributes="Bold"
                                            CornerRadius="3"
                                            Padding="10,0"
                                            Margin="5,0,0,0"
                                            WidthRequest="70"
                                            Clicked="OnEditarLivroClicked" />

                                    <Button Text="Excluir"
                                            Grid.Column="2"
                                            BackgroundColor="Red"
                                            TextColor="White"
                                            FontAttributes="Bold"
                                            CornerRadius="3"
                                            Padding="10,0"
                                            Margin="5,0,0,0"
                                            WidthRequest="70"
                                            Clicked="OnExcluirLivroClicked" />
                                </Grid>
                            </Border>

                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- Formulário para criar/editar livro -->
            <ScrollView>
                <VerticalStackLayout VerticalOptions="Center" 
                                     HorizontalOptions="Center" 
                                     Spacing="20" 
                                     Padding="10">

                    <!-- Campo Título -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Título" TextColor="White" FontSize="14" />
                        <Entry x:Name="TituloEntry"
                               Placeholder="Digite o título do livro"
                               BackgroundColor="White"
                               TextColor="Black"
                               PlaceholderColor="Gray"
                               HeightRequest="60" />
                    </VerticalStackLayout>

                    <!-- Campo Autor -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Autor" TextColor="White" FontSize="14" />
                        <Entry x:Name="AutorEntry"
                               Placeholder="Digite o autor"
                               BackgroundColor="White"
                               TextColor="Black"
                               PlaceholderColor="Gray"
                               HeightRequest="40" />
                    </VerticalStackLayout>

                    <!-- Campo Categoria -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Categoria" TextColor="White" FontSize="14" />
                        <Entry x:Name="CategoriaEntry"
                                Placeholder="Digite a categoria"
                                BackgroundColor="White"
                                TextColor="Black"
                                 PlaceholderColor="Gray"
                                 HeightRequest="40" />
                    </VerticalStackLayout>

                    <!-- Campo Disponibilidade -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Disponibilidade" TextColor="White" FontSize="14" />
                        <Picker x:Name="DisponibilidadePicker"
                                         
                                         BackgroundColor="White"
                                         TextColor="Black"
                                         HeightRequest="40">
                            <Picker.Items>
                                <x:String>Disponível</x:String>
                                <x:String>Emprestado</x:String>
                            </Picker.Items>
                        </Picker>
                    </VerticalStackLayout>


                    <Button x:Name="SalvarButton"
                            Text="Salvar Livro"
                            BackgroundColor="#F97316"
                            TextColor="White"
                            FontAttributes="Bold"
                            CornerRadius="5"
                            HeightRequest="45"
                            Clicked="OnSalvarLivroClicked" />

                    <Button x:Name="CancelarEdicaoButton"
                            Text="Cancelar"
                            BackgroundColor="Gray"
                            TextColor="White"
                            FontAttributes="Bold"
                            CornerRadius="5"
                            HeightRequest="45"
                            Clicked="OnCancelarEdicaoClicked"
                            IsVisible="False" />

                </VerticalStackLayout>
            </ScrollView>

        </VerticalStackLayout>
    </Grid>
</ContentPage>
