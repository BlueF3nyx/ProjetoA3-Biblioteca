<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BibliotecaAPP.Views.CadastroLivroPage"
             Title="Cadastro de Livros"
             BackgroundColor="#f5f5f5">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20">

            <Label Text="Cadastro de Livro"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <Entry Placeholder="Titulo" x:Name="TituloEntry" />
            <Entry Placeholder="Autor" x:Name="AutorEntry" />
            <Entry Placeholder="Categoria" x:Name="CategoriaEntry" />

            <Picker Title="Disponibilidade" x:Name="DisponibilidadePicker">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Dispon√≠vel</x:String>
                        <x:String>Emprestado</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>

            <Button Text="Salvar Livro"
                    BackgroundColor="#4CAF50"
                    TextColor="White"
                    Clicked="OnSalvarLivroClicked" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
