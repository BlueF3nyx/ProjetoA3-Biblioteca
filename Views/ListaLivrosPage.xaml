<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:BibliotecaAppBase.Models"
             x:Class="BibliotecaAppBase.Views.ListaLivrosPage"
             Title="Lista de Livros">

    <CollectionView x:Name="LivrosCollectionView" ItemsSource="{Binding Livros}" Margin="10">
        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="models:Livro">
                <Frame BorderColor="Gray" CornerRadius="10" Padding="10" Margin="5">
                    <VerticalStackLayout>
                        <Label Text="{Binding Titulo}" FontAttributes="Bold" FontSize="18" />
                        <Label Text="{Binding Autor}" FontSize="14" />
                        <Label Text="{Binding Categoria}" FontSize="14" />
                    </VerticalStackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>