<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BibliotecaAPP.Views.CadastroMembroPage"
             Title="Cadastro de Membros"
             BackgroundColor="Transparent"
             NavigationPage.HasNavigationBar="False">

    <Grid>
        <!-- Imagem de fundo -->
        <Image Source="login_biblioteca.jpg"
               Aspect="AspectFill"
               Opacity="1.0"
               IsOpaque="True" />

        <BoxView BackgroundColor="#0B1D49"
                 Opacity="0.75"
                 InputTransparent="True" />

        <VerticalStackLayout Padding="20" Spacing="10">

            <Label Text="Cadastro de Membro"
                   FontSize="24"
                   TextColor="White"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <!-- Lista de membros -->
            <ListView x:Name="MembrosListView"
          HeightRequest="200"
          BackgroundColor="Transparent"
          ItemSelected="OnMembroSelecionado"
          SelectionMode="None">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Border Stroke="Black" StrokeThickness="1" Background="White" Padding="5" Margin="5,2">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="3" />
                                </Border.StrokeShape>

                                <Grid ColumnDefinitions="*, Auto, Auto" VerticalOptions="Center">
                                    <Label Text="{Binding Nome}"
                                    VerticalOptions="Center"
                                    LineBreakMode="NoWrap"
                                    TextColor="Black" />

                                    <Button Text="Editar"
                                    Grid.Column="1"
                                    BackgroundColor="#F97316"
                                    TextColor="White"
                                    FontAttributes="Bold"
                                    CornerRadius="3"
                                    Padding="10,0"
                                    Margin="5,0,0,0"
                                    WidthRequest="70"
                                    Clicked="OnEditarMembroClicked" />

                                    <Button Text="Excluir"
                                    Grid.Column="2"
                                    BackgroundColor="Red"
                                    TextColor="White"
                                    FontAttributes="Bold"
                                    CornerRadius="3"
                                    Padding="10,0"
                                    Margin="5,0,0,0"
                                    WidthRequest="70"
                                    Clicked="OnExcluirMembroClicked" />
                                </Grid>
                            </Border>

                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>


            <!-- Formulario para criar/editar -->
            <ScrollView>
                <VerticalStackLayout VerticalOptions="Center" 
                       HorizontalOptions="Center" 
                       Spacing="20" 
                       Padding="10">

                    <!-- Campo Nome -->
                    <VerticalStackLayout Spacing="5" WidthRequest="350">
                        <Label Text="Nome Completo" TextColor="White" FontSize="14" />
                        <Entry x:Name="NomeEntry"
             Placeholder="Digite o nome completo"
             BackgroundColor="White"
             TextColor="Black"
             PlaceholderColor="Gray"
             HeightRequest="50"
             WidthRequest="350"
             HorizontalOptions="Start"
             MaxLength="100" />
                    </VerticalStackLayout>

                    <!-- Campo CPF -->
                    <VerticalStackLayout Spacing="5" WidthRequest="350">
                        <Label Text="CPF" TextColor="White" FontSize="14" />
                        <Entry x:Name="CpfEntry"
             Placeholder="Digite o CPF"
             Keyboard="Numeric"
             BackgroundColor="White"
             TextColor="Black"
             PlaceholderColor="Gray"
             HeightRequest="50"
             WidthRequest="350"
             HorizontalOptions="Start"
             MaxLength="14" />
                    </VerticalStackLayout>

                    <!-- Campo Telefone -->
                    <VerticalStackLayout Spacing="5" WidthRequest="350">
                        <Label Text="Telefone" TextColor="White" FontSize="14" />
                        <Entry x:Name="TelefoneEntry"
             Placeholder="Digite o telefone"
             Keyboard="Telephone"
             BackgroundColor="White"
             TextColor="Black"
             PlaceholderColor="Gray"
             HeightRequest="50"
             WidthRequest="350"
             HorizontalOptions="Start"
             MaxLength="20" />
                    </VerticalStackLayout>

                    <!-- Campo Email -->
                    <VerticalStackLayout Spacing="5" WidthRequest="350">
                        <Label Text="Email" TextColor="White" FontSize="14" />
                        <Entry x:Name="EmailEntry"
             Placeholder="Digite o email"
             Keyboard="Email"
             BackgroundColor="White"
             TextColor="Black"
             PlaceholderColor="Gray"
             HeightRequest="50"
             WidthRequest="350"
             HorizontalOptions="Start"
             MaxLength="255" />
                    </VerticalStackLayout>

                    <Button x:Name="SalvarButton"
            Text="Salvar Membro"
            BackgroundColor="#F97316"
            TextColor="White"
            FontAttributes="Bold"
            CornerRadius="5"
            HeightRequest="45"
            WidthRequest="350"
            HorizontalOptions="Start"
            Clicked="OnSalvarMembroClicked" />

                    <Button x:Name="CancelarEdicaoButton"
            Text="Cancelar"
            BackgroundColor="Gray"
            TextColor="White"
            FontAttributes="Bold"
            CornerRadius="5"
            HeightRequest="45"
            WidthRequest="350"
            HorizontalOptions="Start"
            Clicked="OnCancelarEdicaoClicked"
            IsVisible="False" />

                </VerticalStackLayout>
            </ScrollView>


        </VerticalStackLayout>
    </Grid>
</ContentPage>
