<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BibliotecaAPP.Views.CadastroMembroPage"
             Title="Cadastro de Membros"
             BackgroundColor="Transparent"
             NavigationPage.HasNavigationBar="False">
    <Grid>
        <!-- Imagem de fundo -->
        <Image Source="login_biblioteca.jpg"
               Aspect="AspectFill"
               Opacity="1.0"
               IsOpaque="True" />
        <BoxView BackgroundColor="#0B1D49"
                 Opacity="0.75"
                 InputTransparent="True" />
        <ScrollView>
            <VerticalStackLayout Padding="15" Spacing="12">
                <!-- Formulário compacto -->
                <Border BackgroundColor="#1E2A5E"
                        StrokeThickness="0"
                        Padding="15"
                        Margin="0,0,0,12">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="8" />
                    </Border.StrokeShape>
                    <VerticalStackLayout Spacing="8">
                        <!-- Cabeçario do formulário compacto -->
                        <Label x:Name="FormHeaderLabel"
                               Text="Cadastro de Membros"
                               FontSize="16"
                               TextColor="#F97316"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               Margin="0,0,0,8" />
                        <!-- Grid para campos lado a lado -->
                        <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto" ColumnDefinitions="*,*" ColumnSpacing="10" RowSpacing="8">
                            <!-- Nome (linha completa) -->
                            <Label Text="👤 Nome Completo" TextColor="White" FontSize="13" FontAttributes="Bold"
                                   Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" />
                            <Entry x:Name="NomeEntry"
                                   Placeholder="Digite o nome completo"
                                   BackgroundColor="White"
                                   TextColor="Black"
                                   PlaceholderColor="Gray"
                                   HeightRequest="38"
                                   MaxLength="100"
                                   FontSize="13"
                                   Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" />
                            
                            <Label Text="📄 CPF" TextColor="White" FontSize="13" FontAttributes="Bold"
                                   Grid.Row="2" Grid.Column="0" />
                            <Label Text="📞 Telefone" TextColor="White" FontSize="13" FontAttributes="Bold"
                                   Grid.Row="2" Grid.Column="1" />
                            <Entry x:Name="CpfEntry"
                                   Placeholder="000.000.000-00"
                                   Keyboard="Numeric"
                                   BackgroundColor="White"
                                   TextColor="Black"
                                   PlaceholderColor="Gray"
                                   HeightRequest="38"
                                   MaxLength="14"
                                   FontSize="13"
                                   Grid.Row="3" Grid.Column="0" />
                            <Entry x:Name="TelefoneEntry"
                                   Placeholder="(00) 00000-0000"
                                   Keyboard="Telephone"
                                   BackgroundColor="White"
                                   TextColor="Black"
                                   PlaceholderColor="Gray"
                                   HeightRequest="38"
                                   MaxLength="20"
                                   FontSize="13"
                                   Grid.Row="3" Grid.Column="1" />
                           
                            <Label Text="📧 Email" TextColor="White" FontSize="13" FontAttributes="Bold"
                                   Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" />
                            <Entry x:Name="EmailEntry"
                                   Placeholder="exemplo@email.com"
                                   Keyboard="Email"
                                   BackgroundColor="White"
                                   TextColor="Black"
                                   PlaceholderColor="Gray"
                                   HeightRequest="38"
                                   MaxLength="255"
                                   FontSize="13"
                                   Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" />
                        </Grid>
                        
                        <Grid ColumnDefinitions="*,*" ColumnSpacing="8" Margin="0,12,0,0">
                            <Button x:Name="SalvarButton"
                                    Text="💾 Salvar"
                                    BackgroundColor="#F97316"
                                    TextColor="White"
                                    FontAttributes="Bold"
                                    CornerRadius="6"
                                    HeightRequest="42"
                                    FontSize="14"
                                    Grid.Column="0"
                                    Clicked="OnSalvarMembroClicked" />
                            <Button x:Name="CancelarEdicaoButton"
                                    Text="❌ Cancelar"
                                    BackgroundColor="#6B7280"
                                    TextColor="White"
                                    FontAttributes="Bold"
                                    CornerRadius="6"
                                    HeightRequest="42"
                                    FontSize="14"
                                    Grid.Column="1"
                                    Clicked="OnCancelarEdicaoClicked"
                                    IsVisible="False" />
                        </Grid>
                    </VerticalStackLayout>
                </Border>
               
                <Border BackgroundColor="#1E2A5E"
                        StrokeThickness="0"
                        Padding="15">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="8" />
                    </Border.StrokeShape>
                    <VerticalStackLayout Spacing="10">
                        <Label Text="👥 Membros"
                               FontSize="16"
                               TextColor="#F97316"
                               FontAttributes="Bold"
                               HorizontalOptions="Center" />
                        <ListView x:Name="MembrosListView"
                                  HeightRequest="250"
                                  BackgroundColor="Transparent"
                                  ItemSelected="OnMembroSelecionado"
                                  SelectionMode="None"
                                  SeparatorVisibility="None">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <ViewCell>
                                        <Border Stroke="#E5E7EB"
                                                StrokeThickness="1"
                                                Background="White"
                                                Padding="10"
                                                Margin="0,3">
                                            <Border.StrokeShape>
                                                <RoundRectangle CornerRadius="6" />
                                            </Border.StrokeShape>
                                            
                                            <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="*,Auto,Auto,Auto">

                                                <VerticalStackLayout Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" Spacing="2" Margin="0,0,0,8">
                                                    <Label Text="{Binding Nome}"
                                                           FontSize="14"
                                                           FontAttributes="Bold"
                                                           TextColor="#1F2937"
                                                           LineBreakMode="TailTruncation" />
                                                    <Grid ColumnDefinitions="*,Auto">
                                                        <Label Text="{Binding Email}"
                                                               FontSize="12"
                                                               TextColor="#6B7280"
                                                               LineBreakMode="TailTruncation"
                                                               Grid.Column="0" />
                                                        <VerticalStackLayout Grid.Column="1" Spacing="2">
                                                            <Label Text="Telefone"
                                                                   FontSize="10"
                                                                   TextColor="Black"
                                                                   FontAttributes="Bold"
                                                                   HorizontalOptions="End" />
                                                            <Label Text="{Binding Telefone}"
                                                                   FontSize="11"
                                                                   TextColor="#9CA3AF"
                                                                   HorizontalOptions="End" />
                                                        </VerticalStackLayout>
                                                    </Grid>
                                                    <Label Text="{Binding Cpf, StringFormat='📄 {0}'}"
                                                           FontSize="11"
                                                           TextColor="#9CA3AF" />
                                                </VerticalStackLayout>
                                                <Button Text="Editar" 
                                                    Grid.Row="1"
                                                Grid.Column="1"
                                                BackgroundColor="#F97316"
                                                TextColor="White"
                                                FontAttributes="Bold"
                                                CornerRadius="4"
                                                WidthRequest="60"    
                                                HeightRequest="32"
                                                FontSize="14"
                                                Margin="2,0"
                                                Clicked="OnEditarMembroClicked" />
                                                <Button Text="Excluir" 
                                                        Grid.Row="1"
                                                 Grid.Column="2"
                                                 BackgroundColor="#DC2626"
                                                 TextColor="White"
                                                 FontAttributes="Bold"
                                                 CornerRadius="4"
                                                 WidthRequest="60"                                                        
                                                 HeightRequest="32"
                                                 FontSize="14"
                                                 Margin="2,0"
                                                 CommandParameter="{Binding .}"
                                                 Clicked="OnExcluirMembroClicked" />
                                            </Grid>
                                        </Border>
                                    </ViewCell>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                       
                        <Label x:Name="EmptyStateLabel"
                               Text=" Nenhum membro cadastrado\nAdicione o primeiro!"
                               TextColor="#9CA3AF"
                               FontSize="13"
                               HorizontalOptions="Center"
                               HorizontalTextAlignment="Center"
                               IsVisible="False"
                               Margin="15" />
                    </VerticalStackLayout>
                </Border>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
