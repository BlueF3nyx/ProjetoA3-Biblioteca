<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BibliotecaAPP.Views.HistoricoEmprestimo"
             Title="Histórico"
             BackgroundColor="White">

	<VerticalStackLayout Padding="20" Spacing="15">

		<Label Text="Histórico de Devoluções"
               FontSize="24"
               FontAttributes="Bold"
               TextColor="Black"
               HorizontalOptions="Center" />

		<CollectionView x:Name="historicoCollectionView"
                        SelectionMode="None"
                        Margin="0,10,0,0"
                        BackgroundColor="White">
			<CollectionView.ItemTemplate>
				<DataTemplate>
					<Frame Padding="15" Margin="0,0,0,10" CornerRadius="10" BorderColor="#DDD" HasShadow="False" BackgroundColor="#F9F9F9">
						<VerticalStackLayout Spacing="6">

							<Label Text="{Binding Livro}"
                                   FontAttributes="Bold"
                                   FontSize="16"
                                   TextColor="Black" />

							<Label Text="{Binding Membro}"
                                   FontSize="14"
                                   TextColor="#555" />

							<HorizontalStackLayout Spacing="15" VerticalOptions="Center">

								<Label Text="{Binding DataEmprestimo, StringFormat='Empréstimo: {0:dd/MM/yyyy}'}"
                                       FontSize="12"
                                       TextColor="#777" />

								<Label Text="{Binding DataDevolucao, StringFormat='Devolução: {0:dd/MM/yyyy}'}"
                                       FontSize="12"
                                       TextColor="#777" />

								<Label Text="{Binding Status}"
                                       FontSize="12"
                                       TextColor="{Binding StatusColor}" />

							</HorizontalStackLayout>

						</VerticalStackLayout>
					</Frame>
				</DataTemplate>
			</CollectionView.ItemTemplate>
		</CollectionView>

	</VerticalStackLayout>
</ContentPage>
