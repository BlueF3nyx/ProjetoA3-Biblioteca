<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BibliotecaAPP.MainPage">

    <VerticalStackLayout Spacing="0">

        <!-- Header -->
        <Grid BackgroundColor="#1F2937" HeightRequest="188" Padding="40,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Título do sistema -->
            <Label Text="Sistema de Biblioteca"
                   FontSize="28"
                   TextColor="White"
                   VerticalOptions="Center"
                   HorizontalOptions="Start" />

            <!-- Nome do usuário -->
            <Label Grid.Column="1"
                   Text="Usuário"
                   FontSize="16"
                   TextColor="White"
                   VerticalOptions="Center"
                   Margin="20,0" />

            <!-- Botão de sair -->
            <Button Grid.Column="2"
                    Text="Sair"
                    TextColor="White"
                    BackgroundColor="Transparent"
                    VerticalOptions="Center"
                    Clicked="OnLogoutClicked" />
        </Grid>

        <!-- Bem-vindo -->
        <Label Text="Bem-Vindo!"
               FontSize="32"
               TextColor="Black"
               Margin="40,20,0,10" />

        <!-- Dashboard Cards -->
        <Grid Padding="40" RowSpacing="30" ColumnSpacing="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Card 1 -->
            <Button Grid.Row="0" Grid.Column="0"
                    Text="Cadastro de Livros"
                    BackgroundColor="#2563EB"
                    TextColor="White"
                    FontSize="16"
                    CornerRadius="20"
                    HeightRequest="170"
                    Clicked="OnCadastroLivrosClicked" />

            <!-- Card 2 -->
            <Button Grid.Row="0" Grid.Column="1"
                    Text="Cadastro de Membros"
                    BackgroundColor="#2563EB"
                    TextColor="White"
                    FontSize="16"
                    CornerRadius="20"
                    HeightRequest="170"
                    Clicked="OnCadastroMembrosClicked" />

            <!-- Card 3 -->
            <Button Grid.Row="0" Grid.Column="2"
                    Text="Registro de Empréstimos"
                    BackgroundColor="#2563EB"
                    TextColor="White"
                    FontSize="16"
                    CornerRadius="20"
                    HeightRequest="170"
                    Clicked="OnRegistroEmprestimosClicked" />

            <!-- Card 4 -->
            <Button Grid.Row="1" Grid.Column="0"
                    Text="Gestão de Devoluções"
                    BackgroundColor="#2563EB"
                    TextColor="White"
                    FontSize="16"
                    CornerRadius="20"
                    HeightRequest="170"
                    Clicked="OnGestaoDevolucoesClicked" />

            <!-- Card 5 -->
            <Button Grid.Row="1" Grid.Column="1"
                    Text="Histórico de Empréstimos"
                    BackgroundColor="#2563EB"
                    TextColor="White"
                    FontSize="16"
                    CornerRadius="20"
                    HeightRequest="170"
                    Clicked="OnHistoricoEmprestimosClicked" />

            <!-- Card 6 -->
            <Button Grid.Row="1" Grid.Column="2"
                    Text="Relatórios"
                    BackgroundColor="#2563EB"
                    TextColor="White"
                    FontSize="16"
                    CornerRadius="20"
                    HeightRequest="170"
                    Clicked="OnRelatoriosClicked" />
        </Grid>

    </VerticalStackLayout>
</ContentPage>
