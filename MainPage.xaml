<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"  
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  
             x:Class="BibliotecaAPP.MainPage"  
             BackgroundColor="#F0F2F5"  
             NavigationPage.HasNavigationBar="False">  

    <VerticalStackLayout Spacing="0">  

        <!-- Header -->  
        <Grid BackgroundColor="#132356" HeightRequest="160" Padding="30">  
            <Grid.ColumnDefinitions>  
                <ColumnDefinition Width="*" />  
                <ColumnDefinition Width="Auto" />  
            </Grid.ColumnDefinitions>  

            <Label Text="Sistema Biblioteca"  
                   FontSize="34"  
                   TextColor="White"  
                   VerticalOptions="Center"  
                   FontAttributes="Bold" />  

            <Button Grid.Column="1"  
                    Text="Sair"  
                    TextColor="White"  
                    BackgroundColor="#F36E1E"  
                    FontSize="18"  
                    CornerRadius="12"  
                    Padding="10,5"  
                    VerticalOptions="Center"  
                    Clicked="OnLogoutClicked" />  
        </Grid>  

        <!-- Dashboard -->  
        <ScrollView>  
            <Grid Padding="20" RowSpacing="20" ColumnSpacing="20">  
                <Grid.RowDefinitions>  
                    <RowDefinition Height="Auto"/>  
                    <RowDefinition Height="Auto"/>  
                </Grid.RowDefinitions>  
                <Grid.ColumnDefinitions>  
                    <ColumnDefinition Width="*" />  
                    <ColumnDefinition Width="*" />  
                    <ColumnDefinition Width="*" />  
                </Grid.ColumnDefinitions>  

                <!-- Card Template -->  
                <!-- Cada card pode ter uma imagem acima do texto -->  

                <!-- Cadastro de Livros -->  
                <Frame Grid.Row="0" Grid.Column="0"  
                       BackgroundColor="White"  
                       CornerRadius="20"  
                       Padding="10"  
                       HeightRequest="170"  
                       HasShadow="True">  
                    <VerticalStackLayout>  
                        <Image Source="livro.jpg" HeightRequest="60" HorizontalOptions="Center" />  
                        <Button Text="Cadastro de Livros"  
                                Clicked="OnCadastroLivrosClicked"  
                                BackgroundColor="Transparent"  
                                TextColor="Black"  
                                FontSize="28"  
                                FontAttributes="Bold"  
                                HorizontalOptions="Center"/>  
                    </VerticalStackLayout>  
                </Frame>  

                <!-- Cadastro de Membros -->  
                <Frame Grid.Row="0" Grid.Column="1"  
                       BackgroundColor="White"  
                       CornerRadius="20"  
                       Padding="10"  
                       HeightRequest="170"  
                       HasShadow="True">  
                    <VerticalStackLayout>  
                        <Image Source="membro.jpg" HeightRequest="60" HorizontalOptions="Center" />  
                        <Button Text="Cadastro de Membros"  
                                Clicked="OnCadastroMembrosClicked"  
                                BackgroundColor="Transparent"  
                                TextColor="Black"  
                                FontSize="28"  
                                FontAttributes="Bold"  
                                HorizontalOptions="Center"/>  
                    </VerticalStackLayout>  
                </Frame>  

                <!-- Registro de Empréstimos -->  
                <Frame Grid.Row="0" Grid.Column="2"  
                       BackgroundColor="White"  
                       CornerRadius="20"  
                       Padding="10"  
                       HeightRequest="170"  
                       HasShadow="True">  
                    <VerticalStackLayout>  
                        <Image Source="registro.jpg" HeightRequest="60" HorizontalOptions="Center" />  
                        <Button Text="Registro de Empréstimos"  
                                Clicked="OnRegistroEmprestimosClicked"  
                                BackgroundColor="Transparent"  
                                TextColor="Black"  
                                FontSize="28"  
                                FontAttributes="Bold"  
                                HorizontalOptions="Center"/>  
                    </VerticalStackLayout>  
                </Frame>  

                <!-- Gestão de Devoluções -->  
                <Frame Grid.Row="1" Grid.Column="0"  
                       BackgroundColor="White"  
                       CornerRadius="20"  
                       Padding="10"  
                       HeightRequest="170"  
                       HasShadow="True">  
                    <VerticalStackLayout>  
                        <Image Source="devolucoes.jpg" HeightRequest="60" HorizontalOptions="Center" />  
                        <Button Text="Gestão de Devoluções"  
                                Clicked="OnGestaoDevolucoesClicked"  
                                BackgroundColor="Transparent"  
                                TextColor="Black"  
                                FontSize="28"  
                                FontAttributes="Bold"  
                                HorizontalOptions="Center"/>  
                    </VerticalStackLayout>  
                </Frame>  

                <!-- Histórico de Empréstimos -->  
                <Frame Grid.Row="1" Grid.Column="1"  
                       BackgroundColor="White"  
                       CornerRadius="20"  
                       Padding="10"  
                       HeightRequest="170"  
                       HasShadow="True">  
                    <VerticalStackLayout>  
                        <Image Source="historico.jpg" HeightRequest="60" HorizontalOptions="Center" />  
                        <Button Text="Histórico de Empréstimo"  
                                Clicked="OnHistoricoEmprestimosClicked"  
                                BackgroundColor="Transparent"  
                                TextColor="Black"  
                                FontSize="28"  
                                FontAttributes="Bold"  
                                HorizontalOptions="Center"/>  
                    </VerticalStackLayout>  
                </Frame>  

                <!-- Relatórios -->  
                <Frame Grid.Row="1" Grid.Column="2"  
                       BackgroundColor="White"  
                       CornerRadius="20"  
                       Padding="10"  
                       HeightRequest="170"  
                       HasShadow="True">  
                    <VerticalStackLayout>  
                        <Image Source="relatorio.jpg" HeightRequest="60" HorizontalOptions="Center" />  
                        <Button Text="Relatórios"  
                                Clicked="OnRelatoriosClicked"  
                                BackgroundColor="Transparent"  
                                TextColor="Black"  
                                FontSize="28"  
                                FontAttributes="Bold"  
                                HorizontalOptions="Center"/>  
                    </VerticalStackLayout>  
                </Frame>  

            </Grid>  
        </ScrollView>  
    </VerticalStackLayout>  
</ContentPage>
