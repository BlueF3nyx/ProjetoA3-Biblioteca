<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BibliotecaAPP.MainPage"
             BackgroundColor="#F0F0F0"
             Title="Sistema de Biblioteca">

    <VerticalStackLayout Spacing="0">

        <!-- Header -->
        <Grid BackgroundColor="#1F2937" Padding="16" HeightRequest="60">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Label Text="Sistema de Biblioteca"
                   FontSize="20"
                   TextColor="White"
                   VerticalOptions="Center" />

            <Label Grid.Column="1"
                   Text="Usuário"
                   FontSize="14"
                   TextColor="White"
                   VerticalOptions="Center"
                   Margin="20,0" />

            <Button Grid.Column="2"
                    Text="Sair"
                    TextColor="White"
                    BackgroundColor="Transparent"
                    Clicked="OnLogoutClicked" />
        </Grid>
        <!-- Dashboard Cards -->
        <Grid Padding="16" RowSpacing="20" ColumnSpacing="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Card 1 -->
            <Button Grid.Row="0" Grid.Column="0"
                    Text="Cadastro de Livros"
                    BackgroundColor="#2563EB"
                    TextColor="White"
                    FontSize="16"
                    CornerRadius="12"
                    HeightRequest="120"
                    Clicked="OnCadastroLivrosClicked" />

            <!-- Card 2 -->
            <Button Grid.Row="0" Grid.Column="1"
                    Text="Cadastro de Membros"
                    BackgroundColor="#2563EB"
                    TextColor="White"
                    FontSize="16"
                    CornerRadius="12"
                    HeightRequest="120"
                    Clicked="OnCadastroMembrosClicked" />

            <!-- Card 3 -->
            <Button Grid.Row="0" Grid.Column="2"
                    Text="Registro de Empréstimos"
                    BackgroundColor="#2563EB"
                    TextColor="White"
                    FontSize="16"
                    CornerRadius="12"
                    HeightRequest="120"
                    Clicked="OnRegistroEmprestimosClicked" />

            <!-- Card 4 -->
            <Button Grid.Row="1" Grid.Column="0"
                    Text="Gestão de Devoluções"
                    BackgroundColor="#2563EB"
                    TextColor="White"
                    FontSize="16"
                    CornerRadius="12"
                    HeightRequest="120"
                    Clicked="OnGestaoDevolucoesClicked" />

            <!-- Card 5 -->
            <Button Grid.Row="1" Grid.Column="1"
                    Text="Histórico de Empréstimos"
                    BackgroundColor="#2563EB"
                    TextColor="White"
                    FontSize="16"
                    CornerRadius="12"
                    HeightRequest="120"
                    Clicked="OnHistoricoEmprestimosClicked" />

            <!-- Card 6 -->
            <Button Grid.Row="1" Grid.Column="2"
                    Text="Relatórios"
                    BackgroundColor="#2563EB"
                    TextColor="White"
                    FontSize="16"
                    CornerRadius="12"
                    HeightRequest="120"
                    Clicked="OnRelatoriosClicked" />
        </Grid>

    </VerticalStackLayout>
</ContentPage>
